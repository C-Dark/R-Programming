##4
x<-seq(0.4,3,len=11)
y<-10+sin(10*x)
g<- function(x)exp(0.9*x)
h<- function(x)1.6*x+5
windows()
curve(g,0,3,col="blue")
curve(h,0,4,col="red",add=T)
points(x,y)

