set.seed(165)
x<-1:10
y<-rnorm(10)
k<-function(x) -x+3
h<-function(x) x-5
curve(k,-3,10)
curve(h,-3,10,add=T)
abline(h=-1,lwd=1)
points(x,y)
#answer-A, THOSE LINES DON'T FORM A TRIANGLE TO BEGIN WITH.


